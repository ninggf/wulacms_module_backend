{
    "files.eol": "\n",
    "files.encoding": "utf8",
    "files.exclude": {
        "*.lock": true,
        "node_modules": true,
        ".vscode": true,
        ".idea": true
    },
    "eslint.workingDirectories": [
        "src/js"
    ],
    "beautify.ignore": [
        "lay/*.js",
        "layui/*.js",
        "layui/*.css",
        "css/*.css",
        "demo/*.js",
        "demo/*.css",
        "demo/*.html"
    ],
    "[javascript]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[json]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[less]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[html]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    }
}
